import java.awt.Color;
import java.awt.Graphics;


public class Circle 
{
	int x, y, r;
	
	public Circle(int x, int y)
	{
		this.x = x;
		this.y = y;
		this.r = 1;
	}
	
	public void update()
	{
		r++;
	}
	
	public void paint(Graphics g)
	{
		g.setColor(Color.white);
		g.drawOval(x - r/2, y - r/2, r, r);
		g.setColor(Color.black);
	}
}
