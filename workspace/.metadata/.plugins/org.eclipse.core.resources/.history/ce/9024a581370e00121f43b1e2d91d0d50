import info.gridworld.actor.ActorWorld;
import info.gridworld.grid.Location;
import java.awt.Color;


public class OctagonBugRunner
{
    public static void main(String[] args)
    {
        ActorWorld world = new ActorWorld();
        OctagonBug bug1 = new OctagonBug(12);
        OctagonBug bug2 = new OctagonBug(3);
        bug1.setColor(Color.RED);
        bug2.setColor(Color.BLUE);      
        world.add(new Location(6,0), bug1);
        world.add(new Location(6,3), bug2);
        world.show();
    }
}